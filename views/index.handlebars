<div class="background">
<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1>Burger Bucket List</h1>
    <h5>Add new burgers below!</h5>
    <form class="create-form">
      <div class="form-group">
        <input type="text" id="ca" name="name" placeholder="Enter Burger">
      </div>
      <h4>Have you tried it?</h4>
      <div class="form-group form-check form-check-inline">
        <input class="form-check-input" type="radio" name="ate" value="1" checked> Already tried<br>
        <input class="form-check-input" type="radio" name="ate" value="0"> Need to try
      </div>

      <button class="add btn btn-success" type="submit">Add to the list</button>
    </form>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Still gotta eat!</h2>
      <ul class="list-group list-group-flush">
        {{#each burgers}}
        {{#unless ate}}
        {{> burgers/burger-block ate=false}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col">
      <h2>Ate and tastes great!</h2>
      <ul class="list-group list-group-flush">
        {{#each burgers}}
        {{#if ate}}
        {{> burgers/ate-block ate=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
</div>