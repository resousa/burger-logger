<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Ultimate Burger List</h1>
    <p class="lead">Keep track of all the burgers you have ate or want to eat below!</p>
  </div>

  <div class="container">
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Type:</label>
        <input type="text" id="ca" name="name">
      </div>

      <div class="form-group">
        <label for="sleepy">Have you tried it?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Already tried<br>
        <input type="radio" name="sleepy" value="0"> Need to try
      </div>

      <button class="add" type="submit">Add Burger</button>
    </form>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-sm">
      <h2>Still gotta eat!</h2>
      <ul>
        {{#each burgers}}
        {{#unless ate}}
        {{> burgers/burger-block ate=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm">
      <h2>Ate and tastes great!</h2>
      <ul>
        {{#each burgers}}
        {{#if ate}}
        {{> burgers/burger-block ate=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>